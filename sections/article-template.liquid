<script type="text/javascript">
  jQuery(document).ready(function () {
    jQuery('.regular').slick({
      dots: false,
      arrows: true,
      infinite: false,
      slidesToShow: 3,
      slidesToScroll: 1,
      nextArrow: '<i class="fa fa-angle-right slick-next"></i>',
      prevArrow: '<i class="fa fa-angle-left slick-prev"></i>',
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2,
            dots: true,
            arrows: false,
          },
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: true,
            arrows: false,
          },
        },
      ],
    });
  });
</script>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ article.url | prepend: shop.url }}"
    },
    "headline": "{{ article.title | escape }}",
    "description": "{{ article.excerpt | escape }}",
    "image": "{{ article.image | img_url: 'large' | prepend: shop.url }}",
    "author": {
      "@type": "Author",
      "name": "{{ article.metafields.global.author | default: 'Default Author' | escape }}",
      "url": "{{ shop.url | append: '/pages/authors-' | append: article.metafields.global.author | default: 'default-author' | replace: ' ', '-' | escape }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ shop.name }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ shop.logo | img_url: 'large' | prepend: shop.url }}"
      }
    },
    "datePublished": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%:z' }}",
    "dateModified": "{{ article.updated_at | date: '%Y-%m-%dT%H:%M:%S%:z' }}"
  }
</script>

{% schema %}
{
  "name": "Article pages",
  "settings": [
    {
      "type": "header",
      "content": "Article Sidebar"
    },
    {
      "type": "checkbox",
      "id": "sidebar_enable",
      "label": "Sidebar Enable"
    },
    {
      "type": "checkbox",
      "id": "social_sharing_blog",
      "label": "Show social sharing buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pagination_enable",
      "label": "Pagination Enable"
    }
  ]
}
{% endschema %}
