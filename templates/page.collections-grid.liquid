            {%- assign r = rating -%}
            {%- if r > 5 -%}{%- assign r = 5 -%}{%- endif -%}
            {%- if r < 0 -%}{%- assign r = 0 -%}{%- endif -%}
            <div class="rating" aria-label="Performance rating: {{ r }} out of 5" style="margin-top:12px">
