                {%- for s in (1..5) -%}
                  {%- assign value = r | minus: forloop.index | plus: 1 -%}
                  {%- if value >= 1 -%}
                    {%- assign pct = 100 -%}
                  {%- elsif value <= 0 -%}
                    {%- assign pct = 0 -%}
                  {%- else -%}
                    {%- assign pct = value | times: 100 -%}
                  {%- endif -%}
