                  assign StopCredit = true
                elsif tag contains 'CreditLimit:'
                  assign credit_limit_parts = tag | split: ':'
                  if credit_limit_parts.size > 1
                    assign CreditLimit = credit_limit_parts[1] | plus: 0 | default: '—'
                  endif
                elsif tag contains 'CreditBalance:'
                  assign credit_balance_parts = tag | split: ':'
                  if credit_balance_parts.size > 1
                    assign CreditBalance = credit_balance_parts[1] | plus: 0 | default: '—'
                  endif
                elsif tag contains 'CreditTerm:'
                  assign credit_term_parts = tag | split: ':'
                  if credit_term_parts.size > 1
                    assign CreditTerm = credit_term_parts[1] | default: '—'
                  endif
                endif
              endfor
            endif
          %}
