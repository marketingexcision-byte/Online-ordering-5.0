<script>
(function hideBadOptions() {
  // list of forbidden option labels (case-insensitive)
  const blocked = ['OPEN', 'BLAC', 'BLAH'];
  const normalize = s => (s || '').trim().toUpperCase();

  function scrub(root = document) {
    root.querySelectorAll('select option').forEach(opt => {
      const text = normalize(opt.label || opt.textContent);
      if (blocked.includes(text)) {
        opt.remove(); // or opt.hidden = true / opt.disabled = true
      }
    });
  }

  // initial run
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', scrub);
  } else {
    scrub();
  }

  // handle dynamically inserted selects/options
  const mo = new MutationObserver(muts => {
    for (const m of muts) {
      m.addedNodes.forEach(node => {
        if (node.nodeType !== 1) return;
        if (node.matches?.('select, option')) scrub(node);
        node.querySelectorAll?.('select, option').forEach(() => scrub(node));
      });
    }
  });
  mo.observe(document.documentElement, { childList: true, subtree: true });
})();
</script>
