      and opt1_name and opt1_name != 'Title' -%}
  <div class="line-prop">
    {{ opt1_name }}: {{ item.variant.option1 }}
  </div>
{%- endif -%}

{%- if item.variant.option2 and item.variant.option2 != '' 
      and item.variant.option2 != 'Default Title'
      and opt2_name and opt2_name != 'Title' -%}
  <div class="line-prop">
    {{ opt2_name }}: {{ item.variant.option2 }}
  </div>
{%- endif -%}

{%- if item.variant.option3 and item.variant.option3 != '' 
      and item.variant.option3 != 'Default Title'
      and opt3_name and opt3_name != 'Title' -%}
  <div class="line-prop">
